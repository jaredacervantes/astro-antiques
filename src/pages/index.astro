---

<Layout title="Abingdon Antiques - Home">
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="py-16 bg-white dark:bg-gray-900 transition-colors duration-200">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <div class="relative h-[80vh] min-h-[600px] w-full rounded-lg overflow-hidden shadow-lg">
            <Image
              src="/images/hero.jpg"
              alt="Abingdon Antiques and More Store Front"
              width={1920}
              height={1080}
              class="absolute inset-0 w-full h-full object-cover md:object-center object-[75%_center]"
              loading="eager"
              decoding="async"
              quality={90}
            />
          </div>
        </div>
      </div>
    </section>

    {/* Ribbon Cutting Ceremony Announcement */}
    <section class="py-16 bg-gradient-to-r from-pink-100 to-purple-100 dark:from-pink-900 dark:to-purple-900 transition-colors duration-200">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <div class="border-4 border-dashed border-pink-300 dark:border-pink-600 rounded-lg p-8 shadow-lg bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm">
            <div class="text-center">
              <div class="flex justify-center mb-6">
                <svg class="w-16 h-16 text-pink-500 dark:text-pink-400" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
                </svg>
              </div>
              <h2 class="text-4xl font-serif font-bold mb-4 text-pink-600 dark:text-pink-300">Join Us for Our Grand Opening!</h2>
              <p class="text-xl text-gray-700 dark:text-gray-200 mb-4">
                ðŸŽ‰ Ribbon Cutting Ceremony ðŸŽ‰
              </p>
              <p class="text-2xl font-bold text-gray-800 dark:text-gray-100 mb-2">
                May 15, 2025 at 2:00 PM
              </p>
              <p class="text-gray-600 dark:text-gray-300 mb-6">
                Be part of this special moment as we officially open our doors at our new location!
              </p>
              <div class="flex flex-wrap justify-center gap-4">
                <a 
                  href="/information" 
                  class="inline-flex items-center gap-2 rounded-md bg-pink-500 px-6 py-3 text-white shadow-sm transition-all hover:bg-pink-600 focus:ring-2 focus:ring-pink-500/50"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                  Get Directions
                </a>
                <a 
                  href="data:text/calendar;charset=utf8,BEGIN:VCALENDAR%0AVERSION:2.0%0ABEGIN:VEVENT%0ADTSTART:20250515T140000%0ADTEND:20250515T150000%0ASUMMARY:Abingdon%20Antiques%20Grand%20Opening%20Ribbon%20Cutting%0ADESCRIPTION:Join%20us%20for%20our%20grand%20opening%20ribbon%20cutting%20ceremony%20at%20our%20new%20location%21%0ALOCATION:227%20W%20Main%20St%2C%20Abingdon%2C%20VA%2024210%0AEND:VEVENT%0AEND:VCALENDAR"
                  download="abingdon-antiques-ribbon-cutting.ics"
                  class="inline-flex items-center gap-2 rounded-md bg-purple-500 px-6 py-3 text-white shadow-sm transition-all hover:bg-purple-600 focus:ring-2 focus:ring-purple-500/50"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                  Add to Calendar
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    {/* Social Media Section */}
    <section class="py-16 bg-white dark:bg-gray-900 transition-colors duration-200">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto">
          <div class="border-2 border-gray-200 dark:border-gray-700 rounded-lg p-8 shadow-lg bg-white dark:bg-gray-800">
            <div class="text-center">
              <h2 class="text-3xl font-serif font-bold mb-6 text-gray-900 dark:text-white">Stay Connected!</h2>
              <p class="text-gray-600 dark:text-gray-300 mb-8">
                Follow us on social media for the latest updates, new arrivals, pictures, and videos!
              </p>
              <div class="flex flex-wrap justify-center gap-4">
                <a 
                  href="https://www.facebook.com/profile.php?id=61551934216826" 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 rounded-md bg-[#1877F2] px-5 py-2.5 text-white shadow-sm transition-all hover:bg-[#166FE5] focus:ring-2 focus:ring-[#1877F2]/50"
                >
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                  Facebook
                </a>
                <a 
                  href="https://www.instagram.com/abingdonantiques/" 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 rounded-md bg-[#E4405F] px-5 py-2.5 text-white shadow-sm transition-all hover:bg-[#D63256] focus:ring-2 focus:ring-[#E4405F]/50"
                >
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.012-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
